  "panels": [
    {
      "collapsed": false,
      "gridPos": {
        "h": 1,
        "w": 24,
        "x": 0,
        "y": 0
      },
      "id": 100,
      "panels": [],
      "title": "SenseiBird API - Overview",
      "type": "row"
    },
    {
      "datasource": "Prometheus",
      "description": "Estado UP/DOWN del backend",
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "mappings": [
            { "from": "", "id": 1, "text": "UP", "to": "", "type": 1, "value": "1" },
            { "from": "", "id": 2, "text": "DOWN", "to": "", "type": 1, "value": "0" }
          ],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "green", "value": 1 }
            ]
          }
        }
      },
      "gridPos": { "h": 5, "w": 4, "x": 0, "y": 1 },
      "id": 1,
      "options": {
        "colorMode": "background",
        "graphMode": "none",
        "justifyMode": "center",
        "orientation": "auto",
        "reduceOptions": {
          "calcs": ["last"],
          "fields": "",
          "values": false
        }
      },
      "targets": [
        {
          "expr": "up{job=\"senseibird-api\"}",
          "format": "time_series",
          "refId": "A"
        }
      ],
      "title": "API Status",
      "type": "stat"
    },
    {
      "datasource": "Prometheus",
      "description": "Requests per second (RPS)",
      "gridPos": { "h": 8, "w": 10, "x": 4, "y": 1 },
      "id": 2,
      "targets": [
        {
          "expr": "sum(rate(http_requests_total[1m]))",
          "refId": "A"
        }
      ],
      "title": "Requests per second (RPS)",
      "type": "timeseries"
    },
    {
      "datasource": "Prometheus",
      "description": "Latencia P95 en segundos",
      "gridPos": { "h": 8, "w": 10, "x": 14, "y": 1 },
      "id": 3,
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket[5m])) by (le))",
          "refId": "A"
        }
      ],
      "title": "Latencia P95",
      "type": "timeseries"
    },
    {
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 9 },
      "id": 200,
      "panels": [],
      "title": "Uso de Recursos del Pod",
      "type": "row"
    },
    {
      "datasource": "Prometheus",
      "description": "Uso de CPU del pod",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 10 },
      "id": 4,
      "targets": [
        {
          "expr": "rate(container_cpu_usage_seconds_total{pod=~\"senseibird-api-.*\"}[2m])",
          "refId": "A"
        }
      ],
      "title": "CPU Usage",
      "type": "timeseries"
    },
    {
      "datasource": "Prometheus",
      "description": "Uso de memoria del pod",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 10 },
      "id": 5,
      "targets": [
        {
          "expr": "container_memory_usage_bytes{pod=~\"senseibird-api-.*\"}",
          "refId": "A"
        }
      ],
      "title": "Memory Usage",
      "type": "timeseries"
    },
    {
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 18 },
      "id": 300,
      "panels": [],
      "title": "Métrica de Negocio",
      "type": "row"
    },
    {
      "datasource": "Prometheus",
      "description": "Eventos de actualización de stats",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 19 },
      "id": 6,
      "targets": [
        {
          "expr": "sum(senseibird_updates_total)",
          "refId": "A"
        }
      ],
      "title": "Actualizaciones de Stats (Métrica de Negocio)",
      "type": "timeseries"
    }
  ],
